@model IEnumerable<HK.Models.Container>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Containers</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContainerNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippedPer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OnAbout)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.From)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirwayBillNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LetterOfCreditNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrawnUnder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Importer)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ContainerNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippedPer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OnAbout)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.From)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AirwayBillNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LetterOfCreditNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DrawnUnder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Importer.ImporterName)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ContainerID }) |
                    @Html.ActionLink("Load", "Load", new { id = item.ContainerID })
                </td>
            </tr>
        </tbody>
    }

</table>
